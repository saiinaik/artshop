@model IEnumerable<SubCategory>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<partial name="_StatusMessage" model="@TempData["StatusMessage"]" />

<div class="border-container">
	<div class="row">
		<div class="col-6">
			<h4 class="s-txt-primary">Sub-Categories</h4>
		</div>
		<div class="col-6 text-right">
			<a class="btn btn-outline-success" asp-controller="SubCategory" asp-action="Create">
				<i class="fas fa-plus"></i>&nbsp;Create
			</a>
		</div>
	</div>
	<hr>
	<div>
		@if (Model.Count() > 0)
		{
			<table class="table table-hover">
				<thead class="thead-inverse">
					<tr>
						<th>@Html.DisplayNameFor(m => m.Name)</th>
						<th>@Html.DisplayNameFor(m => m.Category.Name)</th>

						<th class="text-right">Actions</th>
					</tr>
				</thead>
				@foreach (var subCategory in Model)
				{
					<tr>
						<td>
							@Html.DisplayFor(m => subCategory.Name)
						</td>
						<td>
							@Html.DisplayFor(m => subCategory.Category.Name)
						</td>
						<td class="text-right">
							<partial name="_TableButtonPartial" model="subCategory.Id">
						</td>
					</tr>
				}
			</table>
		}
		else
		{
			<p style="justify-content: center; align-items: center;">No Sub-Categories added</p>
		}

	</div>
</div>


